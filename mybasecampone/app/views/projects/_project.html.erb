<div class="col" id="<%= dom_id project %>">
    <div class="border m-3 rounded card">
        <div class="p-3 bg-secondary text-white rounded-top">
            <strong>Name:</strong>
            <%= project.name %><br/>
            <strong>Created by:</strong>
            <%= project.user.name %>
        </div>

        <div class="descrition_item ">
            <div class="bg-white">
                <strong class="form-text text-dark m-2 fs-3">Description:</strong><br/>
            </div>
            <div class="card-body scroll">
                <p class="overflow-auto">
                <%= project.description %>
                </p>
            </div>
        </div>
        <div class="p-3 bg-light text-dark  rounded-bottom">
            <%= link_to "View", project, class: "btn btn-success"%>
            &nbsp<%= link_to "Edit", edit_project_path(project.id), class: "btn btn-warning"%>
        </div>
    </div>
</div>



